msgid "Tumblr"
msgstr ""

#: ../../docs/modules/sharing.md:9
msgid "Pinterest"
msgstr ""

#: ../../docs/modules/sharing.md:10
msgid "Email"
msgstr ""

#: ../../docs/modules/sharing.md:11
msgid "Embed codes"
msgstr ""

